@model Student
<h2>Deleting the below Record, Are you sure?</h2>

<table>
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Age</th>
        <td>@Model.Age</td>
    </tr>
    <tr>
        <th>Fees</th>
        <td>@Model.Fees</td>
    </tr>
</table>
<form asp-action="DeleteConfirm" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" >Confirm Delete</button>
    <a asp-action="Index">Back to List</a>
</form>
